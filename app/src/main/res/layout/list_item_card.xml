<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:paddingTop="7dp"
    android:paddingLeft="15dp"
    android:paddingBottom="7dp"
    android:paddingRight="15dp"
    android:descendantFocusability="beforeDescendants">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="3dp"
        android:background="@drawable/card_background_selector"
        android:descendantFocusability="afterDescendants"
        android:id="@+id/llCardView">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <TextView
                    android:id="@+id/tvCardTitle"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="text 1"/>
            <FrameLayout
                android:id="@+id/imageProgressBar"
                android:layout_width="fill_parent"
                android:layout_height="120dp">
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    style="?android:attr/progressBarStyleLarge"/>
            </FrameLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:paddingLeft="15dp"
            android:paddingTop="25dp"
            android:paddingRight="15dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            android:id="@+id/ivObjectImage"
            android:visibility="gone"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/gray"
            android:layout_marginTop="5sp"
            android:padding="5sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
            <ImageButton
                android:id="@+id/ivGPlusLink"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:background="@drawable/card_button_selector"
                android:layout_marginTop="5dp"
                android:layout_weight=".5"
                android:scaleType="fitCenter"
                android:src="@drawable/google_flat"
                />
            <View
                android:layout_width="1sp"
                android:layout_height="fill_parent"
                android:background="@color/gray"
                android:padding="5sp"/>
            <ImageButton
                android:id="@+id/ivAddToFavorites"
                android:layout_height="fill_parent"
                android:layout_width="0dp"
                android:paddingTop="5dp"
                android:scaleType="fitCenter"
                android:background="@drawable/card_button_selector"
                android:layout_weight=".5"
                android:src="@drawable/add_flat"
                />
            </LinearLayout>

    </LinearLayout>
</FrameLayout>