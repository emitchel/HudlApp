<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.elliot.mitchell.hudlapp.fragments.SearchFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="25dp">
        <LinearLayout
            android:id="@+id/llTitle"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="1"
            android:focusable="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="35dp"
                android:gravity="right"
                android:text="@string/search"
                android:layout_weight=".4"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/gplus_logo"
                android:layout_weight=".2"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="35dp"
                android:gravity="left"
                android:text="@string/posts"
                android:layout_weight=".4"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llKeyword"
            android:layout_below="@id/llTitle"
            android:layout_marginTop="55dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
                >
            <EditText
                android:id="@+id/etKeywordInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:hint="@string/search_keywords"
                android:layout_weight="0.86"/>
            <ImageView
                android:id="@+id/ivClear"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:scaleType="fitCenter"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:layout_weight=".14"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlSearchButton"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_below="@id/llKeyword"
            android:layout_marginTop="15dp"
            android:background="@drawable/search_button">
            <TextView
                android:id="@+id/tvSearch"
                android:text="@string/search"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:clickable="false"
                android:focusable="false"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
            <ProgressBar
                android:id="@+id/pbSearch"
                android:visibility="gone"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlSearchButton"
            android:text="@string/current_restrictions"
            android:paddingTop="15dp"/>


    </RelativeLayout>
</FrameLayout>
